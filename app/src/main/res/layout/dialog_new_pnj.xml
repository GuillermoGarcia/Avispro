<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:weightSum="4">

  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:labelFor="@+id/pnjName"
      android:text="@string/dialog_new_pnj_name" />

    <EditText
      android:id="@+id/pnjName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
      android:labelFor="@+id/pnjLead"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="@string/dialog_new_pnj_lead"/>

    <NumberPicker
      android:id="@+id/pnjLead"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
      android:labelFor="@+id/pnjSpeed"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="@string/dialog_new_pnj_speed"/>

    <NumberPicker
      android:id="@+id/pnjSpeed"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content" />

  </LinearLayout>

</LinearLayout>